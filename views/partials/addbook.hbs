<form class="ui stacked segment form" action="/genre/{{genre.id}}/addbook" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="title" autofocus required pattern="[0-9A-Z][\0-9a-z\S]+( [0-9A-Z][0-9a-z]+)*" title="Your entry is invalid, try again.">
    </div>
    <div class="field">
      <label>Author</label>
      <input placeholder="Author" type="text" name="author" required pattern="[0-9A-Z][\0-9a-z\S]+( [0-9A-Z][0-9a-z]+)*" title="Your entry is invalid.">
    </div>
  </div>
  <button class="ui black submit button">Add Book</button>
</form>